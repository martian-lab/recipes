<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UtkonosToolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--item name="android:actionOverflowButtonStyle">@style/UtkonosActionButtonOverflow</item-->
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dp</item>
        <item name="android:overlapAnchor" tools:targetApi="21">false</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:itemBackground">#ffffffff</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/font_utkonos_bold</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/font_utkonos_bold</item>
    </style>
</resources>
